{
    "manifest_version": 2,
    "name": "TrelloFun",
    "description": "This extension for trello",
    "version": "1.0",
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "content_security_policy": "script-src 'self' https://trello.com https://api.trello.com; object-src 'self'",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}