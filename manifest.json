{
    "manifest_version": 2,
    "name": "TrelloFun",
    "description": "This extension for trello",
    "version": "1.0",
    "permissions": [
        "tabs",
        "webRequest",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "web_accessible_resources": ["settings.html"],
    "content_scripts": [
        {
            "matches": ["https://trello.com/*"],
            "css": ["client/style.css"],
            "js": ["lib/jquery.min.js", "client/client.js"]
        }
    ],
    "background": {
        "scripts": [
            "lib/jquery.min.js",
            "lib/async.min.js",
            "lib/trello/client.js", 
            "lib/trello/key.js", 
            "lib/trello/services.js", 
            "client/storage.js",
            "client/requestsnooper.js",
            "client/bg.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}